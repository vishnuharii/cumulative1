@model IEnumerable<YourNamespace.Models.Teacher>

@{
    ViewData["Title"] = "Teacher List";
}

<h1>Teacher List</h1>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Hire Date</th>
            <th>Salary</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.Name</td>
                <td>@teacher.HireDate.ToShortDateString()</td>
                <td>@teacher.Salary</td>
                <td><a href="/Teacher/Show/@teacher.TeacherId">Details</a></td>
            </tr>
        }
    </tbody>
</table>
